<!DOCTYPE html>
<html lang="en">

<head>
    <title>Create Group</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-pink-50">
    <%- include('partials/navbar') %>

        <div class="container mx-auto p-8">
            <h2 class="text-2xl font-bold text-pink-600 mb-4">Create a New Chat Group</h2>

            <!-- 그룹 생성 폼 -->
            <form action="/rooms/create" method="POST">
                <input type="text" name="roomName" placeholder="Room Name"
                    class="w-full px-4 py-2 border rounded-lg mb-4">

                <h3 class="text-lg font-semibold text-gray-700 mb-2">Select Users:</h3>
                <div class="grid grid-cols-2 gap-2">
                    <% users.forEach(user=> { %>
                        <% if (user.user_id !=userId) { %> <!-- ✅ 자기 자신 제외 -->
                            <label class="flex items-center">
                                <input type="checkbox" name="selectedUsers" value="<%= user.user_id %>" class="mr-2">
                                <%= user.username %>
                            </label>
                            <% } %>
                                <% }); %>
                </div>

                <button type="submit" class="mt-4 w-full bg-pink-500 text-white py-2 rounded-lg">Create Group</button>
            </form>
        </div>
</body>

</html>